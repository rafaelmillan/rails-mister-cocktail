<div class="back">
  <%= link_to cocktails_path do %>
    <i class="fa fa-arrow-left"></i> BACK
  <% end %>
</div>
<h1>New cocktail</h1>
<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
