<p class="back"><i class="fa fa-arrow-left"></i> <%= link_to "BACK", cocktails_path %></p>
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo %>
<div class="ingredients">
  <% @cocktail.doses.each do |dose| %>
    <p>
      <i class="fa fa-check-circle-o"></i> <%= dose.description %> of <%= dose.ingredient.name %> Â· <%= link_to "Delete", cocktail_dose_path(dose.cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
  <% end %>
</div>

<h2>Add an ingredient</h2>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient.all.map { |ingredient| ingredient.name } %>
  <%= f.input :cocktail, as: :hidden, input_html: { value: @cocktail.name } %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
