<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> Â· <%= link_to "Delete", cocktail_dose_path(dose.cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient.all.map { |ingredient| ingredient.name } %>
  <%= f.input :cocktail, as: :hidden, input_html: { value: @cocktail.name } %>
  <%= f.submit %>
<% end %>
